  />

  <style>
    :root {
      --bg: #020617;
      --accent: #1d4ed8;
      --accent-soft: rgba(37, 99, 235, 0.35);
      --text-main: #e5eeff;
      --text-muted: #9ca3af;
    }

    * {
      box-sizing: border-box;
    }

    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      margin: 0;
      min-height: 100vh;
      background:
        radial-gradient(circle at top left, #1d4ed8 0, transparent 55%),
        radial-gradient(circle at bottom right, #0ea5e9 0, transparent 55%),
        var(--bg);
      color: var(--text-main);
      display: flex;
      flex-direction: column;
    }

    /* ===== NAVBAR (Bootstrap-basert, men i dark mode) ===== */
    .nav-blur {
      backdrop-filter: blur(14px);
      background: rgba(2, 6, 23, 0.85) !important;
      border-bottom: 1px solid rgba(148, 163, 184, 0.35);
      box-shadow: 0 10px 30px rgba(15, 23, 42, 0.9);
    }

    .navbar-brand {
      letter-spacing: 0.06em;
      text-transform: uppercase;
      font-size: 0.9rem;
      color: var(--text-main) !important;
    }

    .navbar-nav .nav-link {
      color: var(--text-muted) !important;
      font-size: 0.9rem;
      padding-inline: 0.75rem;
      border-radius: 10px;
      transition: 0.18s ease;
    }

    .navbar-nav .nav-link:hover,
    .navbar-nav .nav-link.active {
      color: var(--text-main) !important;
      background: rgba(37, 99, 235, 0.25);
      box-shadow: 0 0 16px rgba(37, 99, 235, 0.45);
    }

    .btn-logout {
      border-radius: 999px;
      border: 1px solid rgba(148, 163, 184, 0.7);
      background: radial-gradient(circle at top left, rgba(148, 163, 184, 0.2), rgba(15, 23, 42, 1));
      color: var(--text-main) !important;
      font-size: 0.85rem;
      padding: 0.35rem 1.1rem;
      transition: 0.18s ease;
    }

    .btn-logout:hover {
      border-color: rgba(191, 219, 254, 1);
      background: radial-gradient(circle at top left, rgba(191, 219, 254, 0.25), rgba(15, 23, 42, 1));
      box-shadow: 0 0 18px rgba(59, 130, 246, 0.65);
    }

    /* hamburger ikon litt lysere */
    .navbar-toggler {
      border-color: rgba(148, 163, 184, 0.6);
    }

    .navbar-toggler-icon {
      filter: invert(0.9);
    }

    /* ===== HEADER / INNHOLD ===== */
    header {
      position: relative;
      overflow: hidden;
      padding: 40px 20px 30px;
      text-align: center;
      background: radial-gradient(circle at top, #1d4ed8, #020617 55%);
      border-bottom: 1px solid rgba(148, 163, 184, 0.4);
      box-shadow: 0 18px 50px rgba(15, 23, 42, 0.9);
      margin-top: 0.5rem;
    }

    header::before {
      content: "";
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at 10% 0, rgba(59, 130, 246, 0.4), transparent 60%);
      opacity: 0.9;
      pointer-events: none;
    }

    header > * {
      position: relative;
      z-index: 1;
    }

    h1 {
      margin: 0 0 0.4rem;
      font-size: clamp(2.2rem, 4vw, 2.8rem);
      letter-spacing: 0.04em;
      text-shadow: 0 14px 35px rgba(15, 23, 42, 0.9);
      animation: float-in 700ms ease-out;
    }

    header p {
      margin: 0.2rem 0 0;
      font-size: 0.95rem;
      color: var(--text-muted);
    }

    .container-main {
      max-width: 960px;
      width: 100%;
      margin: 24px auto 40px;
      padding: 0 16px;
      flex: 1;
    }

    .section {
      margin-bottom: 26px;
      padding: 18px 18px 16px;
      border-radius: 14px;
      background:
        radial-gradient(circle at top left, rgba(37, 99, 235, 0.15), transparent 55%),
        rgba(15, 23, 42, 0.88);
      border: 1px solid rgba(30, 64, 175, 0.7);
      box-shadow: 0 14px 35px rgba(15, 23, 42, 0.9);
      position: relative;
      overflow: hidden;
      transition: transform 160ms ease-out, box-shadow 160ms ease-out, border-color 160ms ease-out;
    }

    .section::after {
      content: "";
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at top right, rgba(59, 130, 246, 0.16), transparent 55%);
      opacity: 0;
      transition: opacity 180ms ease-out;
      pointer-events: none;
    }

    .section:hover {
      transform: translateY(-2px);
      border-color: rgba(96, 165, 250, 0.9);
      box-shadow:
        0 20px 45px rgba(15, 23, 42, 0.95),
        0 0 0 1px rgba(15, 23, 42, 1);
    }

    .section:hover::after {
      opacity: 1;
    }

    h2 {
      margin: 0 0 1rem;
      font-size: 1.1rem;
      letter-spacing: 0.09em;
      text-transform: uppercase;
      color: #a5b4fc;
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
    }

    h2::before {
      content: "";
      width: 18px;
      height: 2px;
      border-radius: 999px;
      background: linear-gradient(90deg, #1d4ed8, transparent);
    }

    .job {
      margin-bottom: 14px;
      padding-left: 10px;
      border-left: 2px solid rgba(55, 65, 81, 0.8);
    }

    .job-title {
      font-weight: 600;
      font-size: 0.98rem;
      color: #e5e7eb;
    }

    .job:last-child {
      margin-bottom: 4px;
    }

    .section p,
    .section li {
      font-size: 0.9rem;
      color: var(--text-muted);
    }

    ul {
      padding-left: 18px;
      margin: 0.2rem 0 0;
    }

    #controls {
      margin-top: 18px;
      display: flex;
      justify-content: flex-end;
      gap: 10px;
      flex-wrap: wrap;
    }

    #toggleBtn {
      padding: 9px 16px;
      border-radius: 999px;
      border: 1px solid rgba(129, 140, 248, 0.9);
      background: radial-gradient(circle at top left, rgba(129, 140, 248, 0.3), rgba(15, 23, 42, 1));
      color: #e5e7eb;
      font-size: 0.78rem;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      cursor: pointer;
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      box-shadow: 0 14px 30px rgba(15, 23, 42, 1);
      transition: transform 120ms ease-out, box-shadow 120ms ease-out, border-color 120ms ease-out, background 120ms ease-out;
    }

    #toggleBtn::before {
      content: "◆";
      font-size: 0.55rem;
      opacity: 0.85;
    }

    #toggleBtn:hover {
      transform: translateY(-1px);
      box-shadow: 0 18px 40px rgba(15, 23, 42, 1);
      border-color: rgba(191, 219, 254, 1);
      background: radial-gradient(circle at top left, rgba(191, 219, 254, 0.35), rgba(15, 23, 42, 1));
    }

    footer {
      text-align: center;
      padding: 18px 16px 26px;
      font-size: 0.8rem;
      color: var(--text-muted);
    }

    @keyframes float-in {
      from {
        opacity: 0;
        transform: translateY(12px) scale(0.98);
      }
      to {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    @media (max-width: 640px) {
      .section {
        padding: 14px 12px 12px;
      }
      header {
        padding: 28px 16px 22px;
      }
    }
  </style>
